<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B66218"
    tools:context=".ActivityCau1">

    <TextView
        android:id="@+id/result"
        android:layout_width="386dp"
        android:layout_height="215dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="9dp"
        android:background="#48A7B5"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calc" />

    <EditText
        android:id="@+id/ednumb"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="29dp"
        android:background="#074677"
        android:ems="10"
        android:hint="Input b"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/numa"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numb"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="252dp"
        android:text="Num b:"
        android:textAlignment="textEnd"
        android:textColor="#FEFEFE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numa"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="252dp"
        android:text="Num a:"
        android:textAlignment="textEnd"
        android:textColor="#FEFEFE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ednuma"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="29dp"
        android:background="#074677"
        android:ems="10"
        android:hint="Input a"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#F5E3E3"
        android:textColorHint="#F9F9F9"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/numa"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calc"
        android:layout_width="113dp"
        android:layout_height="62dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="148dp"
        android:background="#A9330D"
        android:text="a+b"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ednumb" />
</androidx.constraintlayout.widget.ConstraintLayout>